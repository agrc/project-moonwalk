{
  "name": "@ugrc/moonwalk",
  "version": "1.0.15",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "check": "tsc -b",
    "dev": "concurrently 'cd functions/node && pnpm run build:watch' 'wait-on http://127.0.0.1:4000 && pnpm run dev:vite' 'pnpm run dev:firebase'",
    "dev:firebase": "firebase emulators:start --import .emulator-data --only functions,storage,firestore,auth",
    "dev:vite": "vite",
    "format": "prettier . --write",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "save-firebase-state": "firebase emulators:start --import .emulator-data --only functions,storage,firestore,auth --export-on-exit",
    "start": "pnpm run dev",
    "start:ci": "vite --host",
    "test": "vitest"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tanstack/react-query": "^5.90.5",
    "@ugrc/eslint-config": "^1.2.3",
    "@ugrc/utah-design-system": "^1.31.0",
    "firebase": "^12.5.0",
    "ky": "^1.13.0",
    "lodash.startcase": "^4.4.0",
    "react": "^19.2.0",
    "react-aria": "^3.44.0",
    "react-aria-components": "^1.13.0",
    "react-dom": "^19.2.0",
    "react-error-boundary": "^6.0.0",
    "react-fast-compare": "^3.2.2",
    "react-stately": "^3.42.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@ugrc/tailwind-preset": "^1.2.0",
    "@ugrc/tsconfigs": "^1.0.3",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cpy-cli": "^6.0.0",
    "eslint": "^9.38.0",
    "firebase-tools": "^14.23.0",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^3.4.18",
    "tailwindcss-react-aria-components": "^1.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-package-version": "^1.1.0",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@firebase/util",
      "esbuild",
      "protobufjs",
      "re2"
    ],
    "overrides": {
      "@babel/runtime@<7.26.10": ">=7.26.10"
    },
    "ignoredBuiltDependencies": [
      "@vaadin/vaadin-usage-statistics",
      "unrs-resolver"
    ]
  }
}
