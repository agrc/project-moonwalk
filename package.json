{
  "name": "@ugrc/moonwalk",
  "version": "1.0.12",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "check": "tsc -b",
    "dev": "concurrently 'cd functions/node && pnpm run build:watch' 'wait-on http://127.0.0.1:4000 && pnpm run dev:vite' 'pnpm run dev:firebase'",
    "dev:firebase": "firebase emulators:start --import .emulator-data --only functions,storage,firestore,auth",
    "dev:vite": "vite",
    "format": "prettier . --write",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "save-firebase-state": "firebase emulators:start --import .emulator-data --only functions,storage,firestore,auth --export-on-exit",
    "start": "pnpm run dev",
    "start:ci": "vite --host",
    "test": "vitest"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tanstack/react-query": "^5.86.0",
    "@ugrc/eslint-config": "^1.2.3",
    "@ugrc/utah-design-system": "^1.28.2",
    "firebase": "^12.2.1",
    "ky": "^1.9.1",
    "lodash.startcase": "^4.4.0",
    "react": "^19.1.1",
    "react-aria": "^3.43.1",
    "react-aria-components": "^1.12.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "react-fast-compare": "^3.2.2",
    "react-stately": "^3.41.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@ugrc/tailwind-preset": "^1.2.0",
    "@ugrc/tsconfigs": "^1.0.3",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.34.0",
    "firebase-tools": "^14.15.2",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^3.4.17",
    "tailwindcss-react-aria-components": "^1.2.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vite-plugin-package-version": "^1.1.0",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@firebase/util",
      "@vaadin/vaadin-usage-statistics",
      "esbuild",
      "protobufjs",
      "re2"
    ],
    "overrides": {
      "@babel/runtime@<7.26.10": ">=7.26.10"
    }
  }
}
