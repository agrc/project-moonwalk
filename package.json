{
  "name": "@ugrc/moonwalk",
  "version": "1.0.7",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "check": "tsc -b",
    "dev": "concurrently 'wait-on http://127.0.0.1:4000 && pnpm run dev:vite' 'pnpm run dev:firebase'",
    "dev:firebase": "firebase emulators:start --import .emulator-data --only functions,storage,firestore,auth",
    "dev:vite": "vite",
    "format": "prettier . --write",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "save-firebase-state": "firebase emulators:start --import .emulator-data --only functions,storage,firestore,auth --export-on-exit",
    "start": "pnpm run dev",
    "start:ci": "vite --host",
    "test": "vitest"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tanstack/react-query": "^5.62.11",
    "@ugrc/utah-design-system": "^1.18.2",
    "firebase": "^11.1.0",
    "ky": "^1.7.4",
    "lodash.startcase": "^4.4.0",
    "react": "^19.0.0",
    "react-aria": "^3.36.0",
    "react-aria-components": "^1.5.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-fast-compare": "^3.2.2",
    "react-stately": "^3.34.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/eslint__js": "^8.42.3",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@ugrc/tailwind-preset": "^1.1.0",
    "@ugrc/tsconfigs": "^1.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "firebase-tools": "^13.29.1",
    "globals": "^15.14.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.6",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.17",
    "tailwindcss-react-aria-components": "^1.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0",
    "vite": "^6.0.6",
    "vite-plugin-package-version": "^1.1.0",
    "vitest": "^2.1.8",
    "wait-on": "^8.0.1"
  }
}
