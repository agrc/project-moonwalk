{
  "name": "@ugrc/moonwalk",
  "version": "1.0.8",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "check": "tsc -b",
    "dev": "concurrently 'wait-on http://127.0.0.1:4000 && pnpm run dev:vite' 'pnpm run dev:firebase'",
    "dev:firebase": "firebase emulators:start --import .emulator-data --only functions,storage,firestore,auth",
    "dev:vite": "vite",
    "format": "prettier . --write",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "save-firebase-state": "firebase emulators:start --import .emulator-data --only functions,storage,firestore,auth --export-on-exit",
    "start": "pnpm run dev",
    "start:ci": "vite --host",
    "test": "vitest"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@tanstack/react-query": "^5.76.1",
    "@ugrc/utah-design-system": "^1.27.1",
    "firebase": "^11.7.3",
    "ky": "^1.8.1",
    "lodash.startcase": "^4.4.0",
    "react": "^19.1.0",
    "react-aria": "^3.39.0",
    "react-aria-components": "^1.8.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "react-fast-compare": "^3.2.2",
    "react-stately": "^3.37.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@ugrc/eslint-config": "^1.2.2",
    "@ugrc/tailwind-preset": "^1.2.0",
    "@ugrc/tsconfigs": "^1.0.3",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.26.0",
    "firebase-tools": "^14.3.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.13",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^3.4.17",
    "tailwindcss-react-aria-components": "^1.2.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-package-version": "^1.1.0",
    "vitest": "^3.1.3",
    "wait-on": "^8.0.3"
  }
}
